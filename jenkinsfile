
node {
  
   def mvn = tool (name: 'maven3', type: 'maven') + '/bin/mvn'
   stage('SCM Checkout'){
    // Clone repo
	git branch: 'master', 
	credentialsId: 'github', 
	url: 'https://github.com/saikumar0612/saikumar/edit/master'
   
   }
   

	
   stage('Mvn Package'){
	   // Build using maven
	   
	   sh "${mvn} clean package deploy"
   }
   

   stage('Email Notification'){
		mail bcc: '', body: """Hi Team, You build successfully deployed
		                       Job URL : ${env.JOB_URL}
							   Job Name: ${env.JOB_NAME}

Thanks,
mail bcc: 'vijay.basolutions@gmail.com', body: '''hi sir,

test mail sending from Jenkins build run''', cc: 'amar.basolutions@gmail.com', from: '', replyTo: '', subject: 'test mail', to: 'saikumar.basolutions@gmail.com'
   
   }
}
