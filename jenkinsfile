
node {
  
   mvnHome = tool (name: 'mavaen3', type: 'maven') + '/bin/mvn'
   stage('SCM Checkout'){
    // Clone repo
	git branch: 'master', 
	credentialsId: 'github', 
	url: 'https://github.com/saikumar0612/saikumar'
   
   }
   

	
   stage('Mvn Package'){
	   // Build using maven
	   mvnHome = tool name:'mavaen3', type: 'maven'
	   sh "${mvnHome}/bin/mvn package"
   }
   

   stage('Email Notification'){

mail bcc: 'vijay.basolutions@gmail.com', body: '''hi sir,

test mail sending from Jenkins build run''', cc: 'amar.basolutions@gmail.com', from: '', replyTo: '', subject: 'test mail', to: 'saikumar.basolutions@gmail.com'
   
   }

   
   }
